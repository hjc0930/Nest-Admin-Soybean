# 应用配置
APP_PORT=8080
APP_PREFIX=/api
# LOG_DIR=../logs

# 数据库细项（可选，覆盖配置对象）
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=Llq123456
DB_DATABASE=nest_admin
DB_SCHEMA=public
DB_SSL=false

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=123456
REDIS_DB=2
# REDIS_KEY_PREFIX=nest-admin:

# JWT 配置
JWT_SECRET=change_me_in_production
